/* pages/list/list.wxss */
scroll-view{
  width:100%;
  height:100%;
  background: #f5f5f5;
}

.picker{
  box-sizing: border-box;
  padding:0 40rpx;
  height:90rpx;
  line-height: 90rpx;
  margin:20rpx 0;
  position: relative;
}

.picker picker{
  width:100%;
  height:100%;
  position: relative;
}

.picker picker image{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
}

.floor{
  padding:0 40rpx;
}

.floor .list{
  overflow: hidden;
}

.floor .list .item{
  width:48%;
  float:left;
  margin:1%;
  /* box-shadow: 0 0 20rpx 20rpx #888 outset; */
  background: #fff;
  border-radius:20rpx;
}

.floor .list .item .goods-img{
  height:250rpx;
}

.floor .list .item .goods-img image{
  height:100%;
  width:100%;
}

.floor .list .item .goods-msg{
  padding:10rpx;
  box-sizing:border-box;
}

.floor .list .item .goods-msg .goods-name{
  font-size:24rpx;
}

.floor .list .item .goods-msg .goods-price{
  padding-top:10rpx;
  font-size:20rpx;
}

.floor .list .item .goods-msg .goods-price .hotsale-price{
  color:#fb8a1d;
  margin-right:40rpx;
}

.floor .list .item .goods-msg .goods-price .shop-price{
  color:#9c9c9c;
  text-decoration: line-through;
}
